/**
 * ref: https://prettier.io/docs/en/configuration.html
 * ref:
 */
{
  "editor.tabCompletion": "on",
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "eslint.format.enable": true,
  "standard._legacyModuleResolve": true,
  "standard.autoFixOnSave": true,
  "files.trimTrailingWhitespace": true,
  "postcssSorting.config": {
    "order": ["custom-properties", "dollar-variables", "declarations", "at-rules", "rules"],
    "properties-order": [
      "color",
      "background",
      "background-color",
      "background-image",
      "background-clip",
      "font",
      "font-style",
      "font-variant",
      "font-weight",
      "font-stretch",
      "font-size",
      "line-height",
      "font-family",
      "text-align",
      "display",
      "height",
      "min-height",
      "max-height",
      "width",
      "min-width",
      "max-width",
      "box-sizing",
      "border",
      "border-width",
      "border-style",
      "border-color",
      "border-radius",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "box-shadow",
      "overflow",
      "overflow-x",
      "overflow-y",
      "content",
      "justify-content",
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "float",
      "z-index"
    ]
  }
}
